@model IEnumerable<crud_operations.Models.Major>

@{ 
	ViewData["Title"] = "Majors";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Majors</h2>

<table>
	<thead>
		<tr>
			<th>Major ID</th>
			<th>Major name</th>
			<th>Degree</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => item.MajorID)</td>
				<td>@Html.ActionLink(item.MajorName, "Students", new { id = item.MajorID }, new { @id = "link" })</td>
				<td>@Html.DisplayFor(modelItem => item.Degree)</td>
			</tr>
		}
	</tbody>
</table>

<div class="link-wrapper">
	<a id="button" href="/Major/AddMajor">Add new major</a>
</div>