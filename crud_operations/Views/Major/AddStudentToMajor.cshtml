@model crud_operations.Models.Student

@{ 
	ViewData["Title"] = "Add new student";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add student to major</h1>

<div>
	<form method="post" action="/Major/AddStudentToMajor">
		@Html.ValidationSummary(true)
		<div>
			@Html.LabelFor(model => model.FirstName)
			@Html.TextBoxFor(model => model.FirstName)
			@Html.ValidationMessageFor(model => model.FirstName)
		</div>
		<div>
			@Html.LabelFor(model => model.LastName)
			@Html.TextBoxFor(model => model.LastName)
			@Html.ValidationMessageFor(model => model.LastName)
		</div>
		<div>
			@Html.LabelFor(model => model.Gender)
			@Html.TextBoxFor(model => model.Gender)
			@Html.ValidationMessageFor(model => model.Gender)
		</div>
		<div>
			@Html.LabelFor(model => model.Year)
			@Html.TextBoxFor(model => model.Year)
			@Html.ValidationMessageFor(model => model.Year)
		</div>
		<div>
			<input type="submit" value="Add"/>
		</div>
	</form>
</div>

<div>
	<a href="/Major/Index">Back to majors</a>
</div>